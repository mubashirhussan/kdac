      "default": 80
    },
    {
      "type": "range",
      "id": "image_grayscale",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Grayscale",
      "default": 0
    },
    {
      "type": "range",
      "id": "image_opacity",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Opacity",
      "default": 70
    }
  ],
  "presets": [
    {
      "name": "Brand slide"
    }
  ]
}
{% endschema %}