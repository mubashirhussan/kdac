{% stylesheet %}

/* Button ko stable banate hain */
button[id^='BuyButtons-ProductSubmitButton-'] {
  position: relative;
  overflow: hidden;
}

/* Base layout â€“ yahan original icon + text ka look maintain hoga */
.add-to-cart-text {
  display: inline-flex;
  gap: var(--gap-2xs);
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
  animation-duration: var(--animation-speed);
  animation-timing-function: var(--animation-easing);
  animation-fill-mode: forwards;
  transition: opacity var(--animation-speed) var(--animation-easing);
}

/* DEFAULT: visible */
.add-to-cart-text--default {
  opacity: 1;
}

/* ADDED: upar overlap kare, hidden by default */
.add-to-cart-text--added {
  position: absolute;
  inset: 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--gap-2xs);
  opacity: 0;
  pointer-events: none;
}

/* Jahan bhi .atc-added lage (component ya button), dono cases cover */
.atc-added .add-to-cart-text--default,
button.atc-added .add-to-cart-text--default {
  animation-name: atc-slide-out;
}

.atc-added .add-to-cart-text--added,
button.atc-added .add-to-cart-text--added {
  animation-name: atc-slide-in;
}


/* FIX QUICK-ADD ICON VISIBILITY */
.quick-add__button {
  opacity: 1 !important;          /* make icon fully visible */
  display: flex !important;        /* restore flex layout */
  align-items: center;
  justify-content: center;
}

.quick-add__button svg,
.quick-add__button .svg-wrapper {
  opacity: 1 !important;           /* prevent hidden SVG */
  visibility: visible !important;
}

/* Animations */
@keyframes atc-slide-in {
  from {
    opacity: 0;
    transform: translateY(0.5em);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes atc-slide-out {
  from {
    transform: translateY(0);
    opacity: 1;
  }

  to {
    transform: translateY(-1em);
    opacity: 0;
  }
}

{% endstylesheet %}
